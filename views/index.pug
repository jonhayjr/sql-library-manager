extends layout.pug

block content 
    h1 Books 
    p 
     a.button(href= '/books/new') Create New Book
    form(action='/books', method='get')
        input(type='search' placeholder='Search' name='search' value='' class='search' )
        input(type='submit')
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
        each book in books 
            tr 
                td
                    a(href='/books/' + book.id)= book.title 
                td= book.author
                td= book.genre 
                td= book.year
    if(prevPage)
        p.prev
            a.button(href= `/books/?page=${prevPage}&search=${search}`) Previous
    if(nextPage)
        p.next
            a.button(href= `/books/?page=${nextPage}&search=${search}`) Next
